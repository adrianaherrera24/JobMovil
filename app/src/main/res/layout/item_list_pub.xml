<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="7dp">

    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|right"
                android:layout_marginLeft="300dp">

                <Button
                    android:id="@+id/edit_pubb"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/edit_pub"
                    android:gravity="center|right" />

                <Button
                    android:layout_width="20dp"
                    android:layout_height="0dp"
                    android:background="#FFFFFFFF"
                    android:gravity="center|right"
                    tools:visibility="gone" />

                <Button
                    android:id="@+id/delete_pubb"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/delete_pub"
                    android:gravity="center|right" />
            </TableRow>

            <TextView
                android:id="@+id/txt_titulo_pub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_descripcion_pub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_titulo_pub"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"
                android:maxLines="5"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="17dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_menu_camera" />
        </LinearLayout>
    </RelativeLayout>

    </android.support.v7.widget.CardView>
</FrameLayout>